<main>
  <form id="login-form" class="form-signin w-50 m-auto">
    <h1 class="h3 mb-3 fw-normal">Log in</h1>

    <label class="mb-1" for="email">Email address</label>
    <input
      name="email"
      type="email"
      class="form-control mb-2"
      id="floatingInput"
      placeholder="name@example.com"
    />

    <label class="mb-1" for="password">Password</label>
    <input
      name="password"
      type="password"
      class="form-control mb-2"
      id="floatingPassword"
      placeholder="Password"
    />
    <button class="w-100 btn btn-primary mt-2 mb-3" type="submit">Sign in</button>
  </form>
  {{#if errorMessage}}
    <div class="alert alert-danger">
      {{errorMessage}}
    </div>
  {{/if}}
</main>