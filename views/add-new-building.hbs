<h2>{{planetInfo.name}}</h2>
<p>Owner : {{planetInfo.owner.username}}</p>

<form method="POST" action="/planet/{{planetInfo._id}}/new-building">

    <label> buildings:
        <select name="building">
            {{#each buildingTypesInfo}}
                <option value={{this._id}}>{{this.name}}</option>
            {{/each}}
        </select>
    </label>

    <button type="submit"> Create </button>
</form>